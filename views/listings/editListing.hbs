<div class="main-container">
  <a href="/manage" class="btn secondary-button">Back </a>
  <h1 class="padding-above">Edit Listing</h1>
  <form method="POST" action="/edit/{{listing._id}}" enctype="multipart/form-data">
    <div class="mb-3">
      <label for="exampleInputTitle" class="form-label">Item Name</label>
      <input type="text" name="title" value="{{listing.title}}" class="form-control" id="exampleInputTitle" required>
    </div>
    <div class="mb-3">
      <label for="exampleFormControlTextarea1" class="form-label">Description</label>
      <textarea class="form-control" name="description" id="exampleFormControlTextarea1" rows="3" required>{{listing.description}}</textarea>
    </div>
    <div>
      <img src={{listing.photo}} alt="" class="img-size">
    </div>
    <!-- Add photo upload here -->
    <div class="upload-area">   
        <input type="file" name="photo" accept="image/png, image/jpg">
    </div>
    <!-- Add photo upload here -->
    <div class="mb-3">
      <label for="neighbourhood" class="form-label">Neighbourhood</label>
      <select class="form-select" name="neighbourhood" value="{{listing.neighbourhood}}" aria-label="Default select example">
        <option value="">Select...</option>
          {{#each response}}
            <option value="{{this._id}}" {{{select ../listing.neighbourhood.name this.name}}}>{{this.name}}</option>
          {{/each}}
      </select>
  </div>
  <button type="submit" class="btn primary-button">Save Changes</button>
  </form>
</div>